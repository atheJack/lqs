<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewpage_id"
        android:id="@+id/bar_id"
        android:layout_width="match_parent"
        android:background="#1296db"
        android:layout_height="?attr/actionBarSize">
        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/bar_img_id"
            android:src="@drawable/i_suwst"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/bar_img_id"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="今日"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/xiaoxi"
            android:padding="18dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.viewpager.widget.ViewPager
        app:layout_constraintTop_toBottomOf="@id/bar_id"
        app:layout_constraintBottom_toTopOf="@id/content_lay1"
        android:id="@+id/viewpage_id"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_lay1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/viewpage_id">
        <ImageView
            android:id="@+id/content1_img1"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:src="@drawable/exam"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/content1_img2"
            app:layout_constraintBottom_toTopOf="@id/content1_text1"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="2"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/content1_text1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="考试"
            app:layout_constraintTop_toBottomOf="@id/content1_img1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/content1_text2"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1"
            />
        <ImageView
            android:id="@+id/content1_img2"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:src="@drawable/chengji"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/content1_img1"
            app:layout_constraintRight_toLeftOf="@id/content1_img3"
            app:layout_constraintBottom_toTopOf="@id/content1_text2"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="2"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/content1_text2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="成绩"
            app:layout_constraintTop_toBottomOf="@id/content1_img2"
            app:layout_constraintLeft_toRightOf="@id/content1_text1"
            app:layout_constraintRight_toLeftOf="@id/content1_text3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1"
            />
        <ImageView
            android:id="@+id/content1_img3"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:src="@drawable/library"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/content1_img2"
            app:layout_constraintRight_toLeftOf="@id/content1_img4"
            app:layout_constraintBottom_toTopOf="@id/content1_text3"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="2"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/content1_text3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="图书馆"
            app:layout_constraintTop_toBottomOf="@id/content1_img3"
            app:layout_constraintLeft_toRightOf="@id/content1_text2"
            app:layout_constraintRight_toLeftOf="@id/content1_text4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1"
            />
        <ImageView
            android:id="@+id/content1_img4"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:src="@drawable/qiandao"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/content1_img3"
            app:layout_constraintRight_toLeftOf="@id/content1_img5"
            app:layout_constraintBottom_toTopOf="@id/content1_text4"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="2"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/content1_text4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="签到"
            app:layout_constraintTop_toBottomOf="@id/content1_img4"
            app:layout_constraintLeft_toRightOf="@id/content1_text3"
            app:layout_constraintRight_toLeftOf="@id/content1_text5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1"
            />
        <ImageView
            android:id="@+id/content1_img5"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:src="@drawable/more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/content1_text4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/content1_text5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="2"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/content1_text5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="更多"
            app:layout_constraintTop_toBottomOf="@id/content1_img5"
            app:layout_constraintLeft_toRightOf="@id/content1_text4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/date_lay"
        app:layout_constraintTop_toBottomOf="@id/content_lay1"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:layout_marginLeft="12dp"
            android:gravity="bottom"
            android:text="第12周"
            android:textSize="18sp"
            android:id="@+id/date_text1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/date_text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="bottom"
            android:text="星期五"
            android:textSize="16sp"
            android:id="@+id/date_text2"
            app:layout_constraintLeft_toRightOf="@id/date_text1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="bottom"
            android:text="3节课 >"
            android:id="@+id/date_text3"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:id="@+id/scroll_id"
        app:layout_constraintTop_toBottomOf="@id/date_lay"
        app:layout_constraintBottom_toTopOf="@id/tail_lay"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroll_lay"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                app:layout_constraintBottom_toTopOf="@id/card2"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:elevation="15dp"
                app:cardCornerRadius="15dp"
                android:layout_height="90dp">
                <TextView
                    android:gravity="center"
                    android:textSize="40sp"
                    android:layout_margin="10dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textColor="#ffffff"
                    android:background="#A1FF0000"
                    android:text="马"/>
                <TextView
                    android:layout_gravity="right|top"
                    android:layout_margin="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="马克思主义基本(赵四学)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="right|bottom"
                    android:layout_margin="10dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="时间：8:00-9:40     地点：东3312"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                app:layout_constraintBottom_toTopOf="@id/card3"
                app:layout_constraintTop_toBottomOf="@id/card1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:elevation="15dp"
                app:cardCornerRadius="15dp"
                android:layout_height="90dp">
                <TextView
                    android:gravity="center"
                    android:textSize="40sp"
                    android:layout_margin="10dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textColor="#ffffff"
                    android:background="#A100FFEA"
                    android:text="马"/>
                <TextView
                    android:layout_gravity="right|top"
                    android:layout_margin="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="马克思主义基本(赵四学)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="right|bottom"
                    android:layout_margin="10dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="时间：10:00-11:40     地点：东3312"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:elevation="15dp"
                app:cardCornerRadius="15dp"
                android:layout_height="90dp">
                <TextView
                    android:gravity="center"
                    android:textSize="40sp"
                    android:layout_margin="10dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textColor="#ffffff"
                    android:background="#A1FFEA00"
                    android:text="马"/>
                <TextView
                    android:layout_gravity="right|top"
                    android:layout_margin="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="马克思主义基本(赵四学)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="right|bottom"
                    android:layout_margin="10dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="时间：14:00-15:40     地点：东3312"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tail_lay"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/tail_img1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintHorizontal_weight="1"
            android:src="@drawable/jinri"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tail_img2"
            app:layout_constraintBottom_toTopOf="@id/tail_text1"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:src="@drawable/kebiao"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tail_img3"
            app:layout_constraintLeft_toRightOf="@id/tail_img1"
            app:layout_constraintBottom_toTopOf="@id/tail_text2"
            app:layout_constraintVertical_chainStyle="spread_inside"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintHorizontal_weight="1"
            android:id="@+id/tail_img2"/>
        <ImageView
            android:src="@drawable/geren"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tail_img2"
            app:layout_constraintBottom_toTopOf="@id/tail_text3"
            app:layout_constraintVertical_chainStyle="spread_inside"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintHorizontal_weight="1"
            android:id="@+id/tail_img3"/>
        <TextView
            android:textColor="@color/tail_text_color"
            android:clickable="true"
            android:gravity="center"
            android:id="@+id/tail_text1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tail_text2"
            app:layout_constraintTop_toBottomOf="@id/tail_img1"
            android:text="今日"/>
        <TextView
            android:textColor="@color/tail_text_color"
            android:clickable="true"
            android:gravity="center"
            android:id="@+id/tail_text2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintLeft_toRightOf="@id/tail_text1"
            app:layout_constraintRight_toLeftOf="@id/tail_text3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tail_img2"
            android:text="小说"/>
        <TextView
            android:textColor="@color/tail_text_color"
            android:clickable="true"
            android:gravity="center"
            android:id="@+id/tail_text3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintLeft_toRightOf="@id/tail_text2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tail_img3"
            android:text="个人"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>